{
  "name": "solophp/validator",
  "type": "library",
  "description": "PHP Data Validator",
  "keywords": [
    "validator",
    "data",
    "form",
    "php",
    "validation",
    "forms"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Validator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\Validator\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "giggsey/libphonenumber-for-php-lite": "^8.13",
    "solophp/contracts": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^2.0"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/",
    "analyze": "phpstan analyze src/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
